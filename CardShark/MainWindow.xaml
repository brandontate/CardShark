<Window x:Class="CardShark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="346" Width="571">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="166*"/>
        </Grid.RowDefinitions>
        <StackPanel Height="60" VerticalAlignment="Top" Margin="98,5,99,0" Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel Margin="0, 0, 40, 0">
                <Label Target="{Binding ElementName=OrganizationComboBox}" VerticalAlignment="Top">Organization</Label>
                <ComboBox x:Name="OrganizationComboBox" Height="25" Width="120" Margin="0" SelectionChanged="OrganizationComboBox_SelectionChanged"/>
            </StackPanel>
            <StackPanel Margin="40,0,0,0">
                <Label Target="{Binding ElementName=EventComboBox}" VerticalAlignment="Top">Event</Label>
                <ComboBox x:Name="EventComboBox" Width="120" Margin="0" IsEnabled="False" SelectionChanged="EventComboBox_SelectionChanged"/>
            </StackPanel>
        </StackPanel>
        <TextBlock x:Name="accuracyBlock" HorizontalAlignment="Center" Margin="228,86,228,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Width="61"/>
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="cardArea" Margin="10" HorizontalAlignment="Center" Grid.Row="1" Width="497">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
